<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
        </shape>
    </item>
    <item android:bottom="0dp" android:top="-10dp" android:left="-10dp" android:right="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/toolbar_outline_width_bottom"
                android:color="@color/purple_accent" />
        </shape>
    </item>
    <item android:bottom="-10dp" android:top="0dp" android:left="-10dp" android:right="-10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="@dimen/toolbar_outline_width_top"
                android:color="@color/purple_accent" />
        </shape>
    </item>
</layer-list>

